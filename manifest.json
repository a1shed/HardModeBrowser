{
  "manifest_version": 3,
  "name": "HardModeDifficulty",
  "version": "1.0",
  "description": "You can't complete any daily task at all!",
  "permissions": ["scripting", "tabs", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Jumpscare"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cat.js", "ads.js", "cursor.js", "lootbox.js"]
    }
  ]
}
